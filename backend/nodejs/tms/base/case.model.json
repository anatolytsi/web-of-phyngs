{
  "@context": "https://www.w3.org/2019/wot/td/v1",
  "title": "WoPCase",
  "description": "",
  "security": "nosec_sc",
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "properties": {
    "meshQuality": {
      "description": "WoP simulation mesh quality",
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "cleanLimit": {
      "description": "WoP simulation clean limit time",
      "type": "number",
      "minimum": 0
    },
    "parallel": {
      "description": "WoP simulation parallel run enabled",
      "type": "boolean"
    },
    "cores": {
      "description": "WoP simulation amount of cores for parallel run",
      "type": "number",
      "minimum": 1
    },
    "initialized": {
      "description": "WoP simulation was initialized",
      "type": "boolean"
    },
    "objects": {
      "description": "WoP simulation objects (actuators and sensors)",
      "type": "array",
      "items": {
        "description": "WoP simulation object name, type and HREFs",
        "type": "object",
        "properties": {
          "name": {
            "description": "WoP object name",
            "type": "string"
          },
          "type": {
            "description": "WoP object type",
            "type": "string"
          },
          "hrefs": {
            "description": "WoP object HREFs",
            "type": "array",
            "items": {
              "description": "WoP object HREF",
              "type": "string"
            }
          }
        }
      }
    },
    "time": {
      "description": "WoP simulation time parameters",
      "type": "object",
      "properties": {
        "real": {
          "description": "WoP real time during the request",
          "type": "string"
        },
        "simulation": {
          "description": "WoP simulation time during the request",
          "type": "string"
        },
        "difference": {
          "description": "WoP time difference between real and simulation times",
          "type": "number",
          "unit": "ms"
        }
      }
    }
  },
  "actions": {
    "clean": {
      "description": "Clean WoP simulation case"
    },
    "setup": {
      "description": "Setup WoP simulation case"
    },
    "run": {
      "description": "Run WoP simulation case"
    },
    "stop": {
      "description": "Stop WoP simulation case"
    },
    "postprocess": {
      "description": "Post-process WoP simulation case"
    },
    "addObject": {
      "description": "Add object to WoP simulation case",
      "properties": {}
    },
    "removeObject": {
      "description": "Remove object from WoP simulation case",
      "type": "string"
    }
  }
}
