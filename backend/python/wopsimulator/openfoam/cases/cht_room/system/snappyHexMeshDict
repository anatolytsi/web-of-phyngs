FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#includeEtc "caseDicts/mesh/generation/snappyHexMeshDict.cfg"

castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    fluid
    {
        type triSurfaceMesh;
        file "fluid.stl";
    
        regions
        {
            walls  { name walls; }
            inlet  { name inlet; }
            outlet { name outlet; }
        }
    }
    heater
    {
        type triSurfaceMesh;
        file "heater.stl";
    }
}

castellatedMeshControls
{
    refinementSurfaces
    {
        fluid
        {
            level (0 0);
            regions
            {
                walls  { level (0 0); patchInfo { type wall; } }
                inlet  { level (2 2); patchInfo { type wall; } }
                outlet { level (2 2); patchInfo { type wall; } }
            }
        }
        heater
        {
            level          (2 2);
            faceZone       heater;
            cellZone       heater;
            cellZoneInside insidePoint;
            insidePoint    (1.5 1.1 0.55);
        }
    }

    nCellsBetweenLevels 1;

    refinementRegions
    {
        // Note: for better mesh quality utilize this refinement region
        
    }
    locationInMesh (1.732000 0.166000 0.936000);
}

addLayersControls
{
    relativeSizes       true;
    minThickness        1;
    finalLayerThickness 1;
    expansionRatio      1;
    layers
    {}
}

